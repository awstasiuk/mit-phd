; 3 Aug 2022
; Andrew Stasiuk
;
; rZrZ Correlation under periodic kicking
; Discrete Time Crystal Experiments
; Scrambling time fixed
; 9 deg Framechange
; theta=170
;
; td2 = 4, change WAHUHA cycles by 90 degrees to reduce systemic errors
; td1 = N_max
; set NS = 16 for best results

define delay scramble
"scramble = .000030"

; WAHUHA8 delays
define delay delay0
"delay0=(2*d20-p1)/2"
define delay delay1
"delay1=d20-p1"
define delay delay2
"delay2=(2*d20-p1)"

"l1=0"

1  ze

2   ; state & pp reset delay
    d1 rpp1 rpp2 rpp3 rpp4 rpp6 rpp7 rpp9 rpp10 rpp11 rpp12
    100u pl2:f2

; Random Zeeman State Preparation
    (p1 ph0):f2

3   ; Repeated WAHUHA8 to encode random state (18 cycles)
    delay0
    (p1 ph1^):f2
    delay1
    (p1 ph2^):f2
    delay2
    (p1 ph3^):f2
    delay1
    (p1 ph4^):f2
    delay0
    lo to 3 times 36

    (p1 ph5):f2
    2.5u

; Hamiltonian Evolution
4   ; periodic kicking & scrambling
    scramble
    (p1 ph6^):f2
    2.5u ; Rz(170)
    (p1 ph7^):f2
    lo to 4 times l1

; Random Zeeman Observable Engineering
    2.5u
    (p1 ph8):f2

5   ; Repeated WAHUHA8 to encode random observable (18 cycles)
    delay0
    (p1 ph9^):f2
    delay1
    (p1 ph10^):f2
    delay2
    (p1 ph11^):f2
    delay1
    (p1 ph12^):f2
    delay0
    lo to 5 times 36

    ; shelf in Z, then measure
    (p1 ph13):f2
    1m
    (p1 ph14):f2

    go=2 ph31
    1m wr #0 if #0

    ; rotate first WAHUHA by 90 degrees
    20m ip0*90
    20m ip1*90
    20m ip2*90
    20m ip3*90
    20m ip4*90
    20m ip5*90
    lo to 2 times td2

    20m rp0
    20m rp1
    20m rp2
    20m rp3
    20m rp4
    20m rp5

    ; increase number of kicking cycles
    5m iu1

    20m ip8*208
    20m ip9*208
    20m ip10*208
    20m ip11*208
    20m ip12*208
    20m ip13*208
    lo to 2 times td1

  exit

  ph0 = (360) 270 270 90 90

  ph1 = (360) 9 225 81 297 153 9 225 81 297 153 9 225 81 297 153 9 225 81 297 153 9 225 81 297 153 9 225 81 297 153 9 225 81 297 153 9
