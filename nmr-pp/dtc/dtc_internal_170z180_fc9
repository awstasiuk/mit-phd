; 2 September 2022
; Andrew Stasiuk
;
; ZZ Correlation under periodic kicking
; Discrete Time Crystal Experiments
; Scrambling time variable
; 9 deg Framechange
; theta=170

; td2 = N_max , max number of kick & scramble cycles (up to 50)
; td1 = length of scramble list, variable Dz scrambling delays

define list<delay> scramble = {0.000005 0.000010 0.000015 0.000030 0.000045 0.000060}

"l1=0"

1  ze

2   ; state prep
    d1 rpp0 rpp1
    100u pl2:f2

3   ; periodic kicking & scrambling
    scramble
    (p1 ph0^):f2
    2.5u
    (p1 ph1^):f2


    lo to 3 times l1

    ; measure
    1m
    (p1 ph30):f2

    go=2 ph31
    1m wr #0 if #0

    ; increase number of kicking cycles
    1m iu1
    lo to 2 times td2

    1m scramble.inc
    1m ru1
    lo to 2 times td1

  exit

  ph0 = (360) 90 118 146 174 202 230 258 286 314 342 10 38 66 94 122 150 178 206 234 262 290 318 346 14 42 70 98 126 154 182 210 238 266 294 322 350 18 46 74 102 130 158 186 214 242 270 298 326 354 22 50 78 106 134 162 190 218 246 274 302 330 358 26 54 82 110 138 166 194 222 250 278 306 334 2 30 58 86 114 142 170 198 226 254 282 310 338 6 34 62 90 118 146 174 202 230 258 286 314 342 10 38 66 94 122 150 178 206 234 262 290 318 346 14 42 70 98 126 154 182 210 238 266 294 322 350 18 46 74 102 130 158 186 214 242 270 298 326 354 22 50 78 106 134 162 190 218 246 274 302
  ph1 = (360) 109 137 165 193 221 249 277 305 333 1 29 57 85 113 141 169 197 225 253 281 309 337 5 33 61 89 117 145 173 201 229 257 285 313 341 9 37 65 93 121 149 177 205 233 261 289 317 345 13 41 69 97 125 153 181 209 237 265 293 321 349 17 45 73 101 129 157 185 213 241 269 297 325 353 21 49 77 105 133 161 189 217 245 273 301 329 357 25 53 81 109 137 165 193 221 249 277 305 333 1 29 57 85 113 141 169 197 225 253 281 309 337 5 33 61 89 117 145 173 201 229 257 285 313 341 9 37 65 93 121 149 177 205 233 261 289 317 345 13 41 69 97 125 153 181 209 237 265 293 321


ph30 = 1 3 3 1
ph31 = 0 2 2 0
