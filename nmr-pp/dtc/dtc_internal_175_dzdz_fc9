; 1 August 2022
; Andrew Stasiuk
;
; DzDz Correlation under periodic kicking
; Discrete Time Crystal Experiments
; Scrambling time variable
; 9 deg Framechange
; theta=175

; td2 = N_max , max number of kick & scramble cycles (up to 150)
; td1 = length of scramble list, variable Dz scrambling delays

define list<delay> scramble = {0.000030 0.000045 0.000060}

"l1=0"

1  ze

2   ; state prep
    d1 rpp20 rpp21
    100u pl2:f2
    (p1 ph0):f2
    d2
    (p2 ph1):f2
    d13

3   ; periodic kicking & scrambling
    (p1 ph20^):f2
    2.5u
    (p1 ph21^):f2
    scramble

    lo to 3 times l1

    ; measure
    d13
    (p2 ph6):f2

    go=2 ph31
    1m wr #0 if #0

    ; increase number of kicking cycles
    1m iu1
    lo to 2 times td2

    1m scramble.inc
    1m ru1
    lo to 2 times td1

  exit

ph0 = (360) {351}*2 {171}*2
ph1 = {1}*2 {3}*2

ph20 = (360) 270 113 316 159 2 205 48 251 94 297 140 343 186 29 232 75 278 121 324 167 10 213 56 259 102 305 148 351 194 37 240 83 286 129 332 175 18 221 64 267 110 313 156 359 202 45 248 91 294 137 340 183 26 229 72 275 118 321 164 7 210 53 256 99 302 145 348 191 34 237 80 283 126 329 172 15 218 61 264 107 310 153 356 199 42 245 88 291 134 337 180 23 226 69 272 115 318 161 4 207 50 253 96 299 142 345 188 31 234 77 280 123 326 169 12 215 58 261 104 307 150 353 196 39 242 85 288 131 334 177 20 223 66 269 112 315 158 1 204 47 250 93 296 139 342 185 28 231 74 277
ph21 = (360) 284 127 330 173 16 219 62 265 108 311 154 357 200 43 246 89 292 135 338 181 24 227 70 273 116 319 162 5 208 51 254 97 300 143 346 189 32 235 78 281 124 327 170 13 216 59 262 105 308 151 354 197 40 243 86 289 132 335 178 21 224 67 270 113 316 159 2 205 48 251 94 297 140 343 186 29 232 75 278 121 324 167 10 213 56 259 102 305 148 351 194 37 240 83 286 129 332 175 18 221 64 267 110 313 156 359 202 45 248 91 294 137 340 183 26 229 72 275 118 321 164 7 210 53 256 99 302 145 348 191 34 237 80 283 126 329 172 15 218 61 264 107 310 153 356 199 42 245 88 291

ph6 = 1 3
ph31 = 0  2
